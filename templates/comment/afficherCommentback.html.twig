{% extends 'base.html.twig' %}



  {% block body %}

      <div class="card">
          <div class="d-flex align-items-end row">




              <div class="row">

                  <!-- Left side columns -->
                  <div class="col-lg-8">
                      <div class="row">


                          <div class="col-12">



                              <div class="card-body">
                                  <h5 class="card-title">La liste des comments </h5>
<!--a type="button" href="{{ path('ajoutercomment') }}" class="btn btn-rounded btn-outline-info">Ajouter</a-->

                                  <input  id="myInput"  type="text" placeholder="search">
                                  <table class="table table-bordered" id="t"  width="100%" cellspacing="0">
                                      <thead>
                                      <tr>
                                          {#  <th class="text-center">Supprimer</th>
                                    <th class="text-center">Modifier</th>#}
                                          <th  class="text-center"></th>
                                          <th class="text-center">User</th>
                                          <th class="text-center"> date comment</th>
                                          <th class="text-center">content</th>
                                          <th class="text-center">Actions</th>

                                      </tr>
                                      </thead>

                                      <tbody id="myTable">
                                      {% for i in tableComment %}
                                          <tr>

                                          <tr>

                                              <td>             <a href="{{ path('pdfComment',{'id': i.id}) }}">  <img   width="30" src="https://cdn-icons-png.flaticon.com/512/337/337946.png">  </a>
                                              </td>
                                              <td> {{ i.User  }} </td>

                                              <td>{{(i.date).format('d/m/Y')}}</td>
                                              <td> {{ i.content  }} </td>

                                              <td class="text-center"><a type="button" href="{{ path('supprimerCommentback', {'id': i.id}) }}" class="btn btn-rounded btn-outline-danger">Supprimer</a>


                                              </td>




                                          </tr>


                                      {% endfor %}



                                      </tbody>
                                      <tbody id="search">
                                      </tbody>
                                  </table>
                                  {{ knp_pagination_render(tableComment) }}

                                  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                                  <script>
                                      $(document).ready(function(){
                                          $("#myInput").on("keyup", function() {
                                              var value = $(this).val().toLowerCase();
                                              $("#myTable tr").filter(function() {
                                                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                              });
                                          });
                                      });
                                  </script>
                              </div>

                          </div><!-- End Recent Sales -->

                          <!-- Top Selling -->





                      </div>






                  </div>
              </div>

          </div>
      </div>

  {% endblock %}